# =============================================================================
# Django Core
# =============================================================================
DJANGO_SECRET_KEY='change-me-to-a-hashed-long-random-string'
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,backend

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
DB_ENGINE=django.db.backends.postgresql
DB_NAME=health_consultant
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432

# =============================================================================
# CORS — comma-separated origins
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# Postgres Container (used by docker-compose for the db service)
# =============================================================================
POSTGRES_DB=health_consultant
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# =============================================================================
# AI Provider — "openai" (cloud) or "ollama" (local) or "mock" (dev/testing)
# =============================================================================
AI_PROVIDER=openai

# OpenAI (used when AI_PROVIDER=openai)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Ollama (used when AI_PROVIDER=ollama)
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_MODEL=phi3.5:3.8b-mini-instruct-q4_K_M
